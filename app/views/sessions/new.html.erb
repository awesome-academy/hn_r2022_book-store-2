<div id="layoutAuthentication">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header"><h3 class="text-center font-weight-light my-4"><%= t "login" %>
              </h3></div>
                <div class="card-body">
                  <%= form_for :session, url: login_path do |f| %>
                    <div class="form-floating mb-3">
                      <%= f.email_field :email, class: "form-control" %>
                      <label><%= t "email" %></label>
                    </div>
                    <div class="form-floating mb-3">
                      <%= f.password_field :password, class: "form-control" %>
                      <label><%= t "password" %></label>
                    </div>
                    <div class="form-check mb-3">
                      <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                      <label class="form-check-label" for="inputRememberPassword"><%= t "remember" %></label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                      <a class="small" href="password.html"><%= t "forgot" %></a>
                      <%= f.submit t("login"), class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
                <div class="card-footer text-center py-3">
                  <p><%= t "wanna_signup", class: "small" %> 
                  <%= link_to t("signup"), signup_path %></p>
                </div>
              </div>
            </div>
        </div>
      </div>
    </main>
  </div>
</div>

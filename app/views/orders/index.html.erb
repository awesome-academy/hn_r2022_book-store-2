<div class="container-fluid px-4">
  <h3 class="mt-4"><%= t "my_order" %></h3>
  <%= render "form_search" %>
  <hr class="sidebar-divider">
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= t "receiver_information" %></th>
        <th scope="col"><%= t "product" %></th>
        <th scope="col"><%= sort_link @search, :created_at, t("create_date") %></th>
        <th scope="col"><%= sort_link @search, :order_price, t("total_price") %></th>
        <th scope="col"><%= sort_link @search, :status, t("status") %></th>
        <th scope="col"><%= t "option" %></th>
      </tr>
    </thead>
    <tbody class="align-items-center">
      <% if @orders.any? %>
        <% @orders.each do |item| %>
          <%= render partial: "orders/order", locals: {order: item} %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

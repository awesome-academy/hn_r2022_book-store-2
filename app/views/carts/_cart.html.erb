<div class="container-fluid">
  <h3 class="mt-4"><%= t "cart" %></h3>
</div>
<div class="row">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered m-0">
        <thead class="bg-dark text-center text-white">
          <tr>
            <th class="py-3 px-2 col-6"><%= t "cart" %></th>
            <th class="py-3 px-2 col-2"><%= t "price" %></th>
            <th class="py-3 px-2 col-2"><%= t "quantity" %></th>
            <th class="py-3 px-2 col-2"><%= t "total" %></th>
            <th class="align-middle py-3 px-0"></th>
          </tr>
        </thead>

        <tbody class="text-center">
          <%= render partial: "carts/cart_row", collection: @cart, as: :cart %>
        </tbody>
      </table>
    </div>

    <div class="d-flex flex-row-reverse align-items-center pb-4">
      <div class="float-right">
        <% if user_signed_in? %>
          <button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">
            <%= link_to t("back"), books_path, class:"text-decoration-none" %>
          </button>
          <button type="button" class="btn btn-lg btn-primary mt-2">
            <%= link_to t("go_checkout"), checkout_path, class: "text-white text-decoration-none" %>
          </button>
        <% else %>
          <h5 class="mt-2">
            <%= t "please_login" %>
            <%= link_to t("login"), new_user_session_path, class: "text-decoration-none" %>
          </h5>
        <% end %>
      </div>
    </div>
  </div>
</div>
